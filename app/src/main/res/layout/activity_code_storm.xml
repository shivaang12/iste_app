                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rules"
                    android:textSize="10sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/layout_green_code"
                    android:layout_marginTop="14dp"
